<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>mw-image</artifactId>
        <groupId>com.water</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>mw-image-server</artifactId>

    <properties>
        <spring.version>4.3.6.RELEASE</spring.version>
        <!--<spring.data.elasticsearch>2.0.2.RELEASE</spring.data.elasticsearch>-->
        <spring.boot.version>1.1.4.RELEASE</spring.boot.version>
        <spring.data.commons>1.12.2.RELEASE</spring.data.commons>
        <aspectj.version>1.5.4</aspectj.version>
        <aspectjweaver.version>1.8.2</aspectjweaver.version>
        <fastjson.version>1.1.43</fastjson.version>
        <guava.version>18.0</guava.version>
        <dubbo.version>2.4.4</dubbo.version>
        <zookeeper.version>3.4.6</zookeeper.version>
        <log4j.version>1.2.12</log4j.version>
        <slf4j.version>1.7.5</slf4j.version>
        <gson.version>2.6.2</gson.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <version>${spring.boot.version}</version>
        </dependency>
        <dependency>
            <groupId>com.water</groupId>
            <artifactId>mw-image-client</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <!--log4j-->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>2.7</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>dev-mac</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <active.profile>dev-mac</active.profile>
            </properties>
        </profile>
        <profile>
            <id>dev-window</id>
            <properties>
                <active.profile>dev-window</active.profile>
            </properties>
        </profile>
        <profile>
            <id>product</id>
            <properties>
                <active.profile>product</active.profile>
            </properties>
        </profile>
    </profiles>
    <build>
        <filters>
            <filter>../config_filters/config-${active.profile}.properties</filter>
        </filters>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.properties</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
        <finalName>water-image-client</finalName>
    </build>
</project>